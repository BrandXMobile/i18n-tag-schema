{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-console": 0,
        "semi": [
            2,
            "never"
        ],
        "no-var": 2,
        "prefer-const": 2,
        "no-const-assign": 2
    },
    "plugins": [
        "babel"
    ]
}